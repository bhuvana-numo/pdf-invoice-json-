{
  "pageMargins": [20, 20, 20, 20],
  "content": [
    {
      "absolutePosition": { "x": 15, "y": 10 },
      "canvas": [
        {
          "type": "rect",
          "x": 0,
          "y": 0,
          "w": 565,
          "h": 802,
          "r": 5,
          "lineWidth": 2
        }
      ]
    },
    {
      "columns": [
        { 
          "image": "{{invoiceQR}}", 
          "fit": [80, 80], 
          "alignment": "right",
          "margin": [0, 10, 0, 10]
        }
      ]
    },
    {
      "image": "logo.png",
      "fit": [120, 60],
      "alignment": "center",
      "margin": [0, -60, 0, 10]
    },
    { 
      "text": "Invoice", 
      "style": "header", 
      "alignment": "center", 
      "margin": [0, 10, 0, 10] 
    },
    {
      "table": {
        "widths": ["50%", "50%"],
        "body": [
          [{ "text": "Invoice Number", "alignment": "left" }, { "text": "{{invoice}}", "alignment": "right" }],
          [{ "text": "Address", "alignment": "left" }, { "text": "{{stationAddress}}", "alignment": "right" }],
          [{ "text": "GST Number", "alignment": "left" }, { "text": "{{stationGSTN}}", "alignment": "right" }],
          [{ "text": "PAN", "alignment": "left" }, { "text": "{{stationPAN}}", "alignment": "right" }]
        ]
      },
      "layout": "noBorders",
      "margin": [10, 20, 10, 10]
    },
    { "text": "Bill To", "style": "subheader", "margin": [10, 10, 0, 5] },
    {
      "table": {
        "widths": ["50%", "50%"],
        "body": [
          [{ "text": "Name", "alignment": "left" }, { "text": "{{userName}}", "alignment": "right" }],
          [{ "text": "Additional Information", "alignment": "left" }, { "text": "{{userType}} {{vehicleDetails}}", "alignment": "right" }],
          [{ "text": "Address", "alignment": "left" }, { "text": "{{accountAddress}}", "alignment": "right" }],
          [{ "text": "GST Number", "alignment": "left" }, { "text": "{{accountGSTN}}", "alignment": "right" }],
          [{ "text": "PAN", "alignment": "left" }, { "text": "{{accountPAN}}", "alignment": "right" }],
          [{ "text": "Invoice Date", "alignment": "left" }, { "text": "{{createdOn}}", "alignment": "right" }]
        ]
      },
      "layout": "noBorders",
      "margin": [10, 0, 10, 10]
    },
    { "text": "Transaction Details", "style": "subheader", "margin": [10, 10, 0, 5] },
    {
      "table": {
        "widths": ["50%", "50%"],
        "body": [
          [{ "text": "Charging Location", "alignment": "left" }, { "text": "{{chargingLocation}}", "alignment": "right" }],
          [{ "text": "Charge Point", "alignment": "left" }, { "text": "{{chargePoint}}", "alignment": "right" }],
          [{ "text": "Connector Type", "alignment": "left" }, { "text": "{{connectorType}}", "alignment": "right" }]
        ]
      },
      "layout": "noBorders",
      "margin": [10, 0, 10, 10]
    },
    { "text": "Payment Details", "style": "subheader", "margin": [10, 10, 0, 5] },
    {
      "table": {
        "widths": ["50%", "50%"],
        "body": [
          [{ "text": "Transaction ID", "alignment": "left" }, { "text": "{{transactionDetails}}", "alignment": "right" }],
          [{ "text": "Payment Method", "alignment": "left" }, { "text": "{{paymentMethod}}", "alignment": "right" }],
          [{ "text": "Payment Status", "alignment": "left" }, { "text": "{{paymentStatus}}", "alignment": "right" }],
          [{ "text": "Total Amount", "alignment": "left" }, { "text": "{{totalAmount}} {{currency}}", "alignment": "right" }]
        ]
      },
      "layout": "noBorders",
      "margin": [10, 0, 10, 10]
    }
  ],
  "styles": {
    "header": { "fontSize": 16, "bold": true },
    "subheader": { "fontSize": 12, "bold": true }
  }
}
